<Window x:Class="TestMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Views">
                <MenuItem Header="Main" Click="Main_Click"/>
                <MenuItem Header="Editor" Click="Editor_Click"/>
                <MenuItem Header="Test" Click="Test_Click"/>
            </MenuItem>
        </Menu>
        <!-- ContentControl na główny widok -->
        <ContentControl x:Name="MainContent" />
    </Grid>
</Window>
